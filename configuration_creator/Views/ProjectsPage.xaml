<Page
    x:Class="configuration_creator.Views.ProjectsPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:vm="clr-namespace:configuration_creator.ViewModels"
    xmlns:properties="clr-namespace:configuration_creator.Properties"
    xmlns:behaviors="clr-namespace:configuration_creator.Behaviors"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800">

    <Page.Resources>
        <DataTemplate x:Key="contentGridItemTemplate">
            <Grid
                Width="300"
                Height="300"
                Background="{DynamicResource MahApps.Brushes.Gray10}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="12">
                    <TextBlock
                        FontSize="32"
                        Text="{Binding Client}"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        MaxWidth="280"/>
                    <TextBlock
                        Margin="0,12,0,0"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        FontSize="24"
                        Text="{Binding CC}"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        MaxWidth="280"/>
                    <TextBlock
                        Margin="0,50,0,0"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        FontSize="16"
                        Text="{Binding ProjectInfo}"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        MaxWidth="280"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.ProjectsPageTitle}" />
        <ListView
            Grid.Row="1"
            Margin="{StaticResource SmallLeftMargin}"
            SelectionMode="Single"
            ItemsSource="{Binding Source}"
            SelectedItem="{Binding SelectedTile, Mode=TwoWay}"
            Style="{StaticResource ContentGridListViewStyle}"
            ItemTemplate="{StaticResource contentGridItemTemplate}">
        </ListView>
    </Grid>
</Page>
